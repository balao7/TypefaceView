<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/particiant_bkg"
    tools:context=".MainActivity">

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:text="Roboto Regular" />

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:text="Roboto Medium"
        app:typeface="roboto_medium" />

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/type3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:text="Roboto Bold"
        app:typeface="roboto_bold" />

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/type4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:text="Roboto Light"
        app:typeface="roboto_light" />

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/type5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:text="Roboto Thin"
        app:typeface="roboto_thin" />

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/type6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:text="@string/html_string"
        app:typeface="roboto_thin"
        app:html="true"/>

</LinearLayout>
